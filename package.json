{
  "name": "obsidian-textlint",
  "version": "0.0.1",
  "main": "src/index.ts",
  "description": "Proofread your notes by textlint(https://github.com/textlint/textlint)",
  "homepage": "https://github.com/shivase/obsidian-textlint",
  "keywords": [
    "obsidian",
    "textlint"
  ],
  "author": "shivase",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "typesync",
    "generate-css": "postcss src/styles.css -o styles.css",
    "generate-worker:dev": "MODE=development ./scripts/generate-worker.sh",
    "generate-worker:prod": "./scripts/generate-worker.sh",
    "build:dev": "NODE_ENV=development yarn generate-css && webpack && cp ./dist/main.js* .",
    "build:prod": "NODE_ENV=production yarn generate-css && webpack && cp ./dist/main.js* .",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint --fix 'src/**/*.{js,ts,json,html}'",
    "lint:prettier": "prettier --no-error-on-unmatched-pattern --write src/**/*.{json,js,ts,md,html}"
  },
  "dependencies": {
    "@codemirror/language": "https://github.com/lishid/cm-language",
    "@codemirror/state": "^6.1.4",
    "@codemirror/view": "^6.7.0",
    "obsidian": "0.16.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@sentry/browser": "^7.24.2",
    "@sentry/tracing": "^7.24.2",
    "@sentry/webpack-plugin": "^1.20.0",
    "@textlint-ja/textlint-rule-no-dropping-i": "^2.0.0",
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": "^2.0.1",
    "@textlint-ja/textlint-rule-no-synonyms": "^1.3.0",
    "@textlint/script-compiler": "^0.12.1",
    "@textlint/types": "^12.2.3",
    "@types/eslint": "^8.4.10",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/node": "^18.11.12",
    "@types/postcss-import": "^14.0.0",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/uglify-js": "^3.17.1",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "autoprefixer": "^10.4.13",
    "builtin-modules": "3.3.0",
    "clsx": "^1.2.1",
    "commitizen": "^4.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "cssnano": "^5.1.14",
    "cz-customizable": "^7.0.0",
    "daisyui": "^2.43.0",
    "dotenv": "^16.0.3",
    "esbuild": "0.16.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-tailwindcss": "^3.7.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sudachi-synonyms-dictionary": "^12.0.0",
    "tailwindcss": "^3.2.4",
    "terser-webpack-plugin": "^5.3.6",
    "textlint": "^12.2.4",
    "textlint-rule-abbr-within-parentheses": "^1.0.2",
    "textlint-rule-date-weekday-mismatch": "^1.0.6",
    "textlint-rule-footnote-order": "^1.0.3",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-inappropriate-words": "^2.0.0",
    "textlint-rule-ja-no-orthographic-variants": "^2.0.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-period-in-list-item": "^0.3.3",
    "textlint-rule-prefer-tari-tari": "^1.0.3",
    "textlint-rule-preset-ja-spacing": "^2.2.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "textlint-rule-preset-jtf-style": "^2.3.13",
    "textlint-rule-use-si-units": "^1.0.2",
    "textlint-rule-write-good": "^2.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tslib": "2.4.1",
    "typescript": "4.9.4",
    "typesync": "^0.9.2",
    "uglify-js": "^3.17.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0",
    "worker-loader": "^3.0.8"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,html}": [
      "prettier --write --loglevel=error",
      "eslint --fix"
    ]
  }
}
